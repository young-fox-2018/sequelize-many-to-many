<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body>
    <% include partials/menu %>
    <div class="container container-fluid">
        <h3 class="bg-3 text-center"> Add Student Student</h3>
        <form method="POST" action="/student/<%-detailStudent.id%>/add-subject">
            <div class="form-group row">
                <label for="message" class="col-sm-2 col-form-label">First Name</label>
                <input name="first_name" class="form-control" type="text" value="<%- detailStudent.first_name %>" disabled/>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Last Name</label>
                <input name="last_name" class="form-control" type="text" value="<%- detailStudent.last_name %>" disabled/>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">Email</label>
                <input  name="email" class="form-control" type="email" value="<%- detailStudent.email %>" disabled/>
            </div>
            <div class="form-group row">
                    <label for="inputState">Subject</label>
                    <select id="inputState" class="form-control" name="subject_name">
                        <option>Choose...</option>
                        <% dataSubject.forEach(subject=>{ %>
                        <option > <%= subject.subject_name %></option>
                      <% }) %>
                    </select>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">submit</button>
                </div>
            </div>
        </form> 
    </div>
</body>
</html>